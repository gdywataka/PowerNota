@model Nota1.Models.Usuario

@{
    Layout = "~/Views/Shared/Inicial.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">

        @using (Html.BeginForm("Create", "Usuario",FormMethod.Post, new { id = "criarUsuario" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal ">
                <h4>Crie sua conta</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2 "})
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", id = "email" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.login, htmlAttributes: new { @class = "control-label col-md-2 ",  })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control", id = "login" } })
                        @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.senha, htmlAttributes: new { @class = "control-label col-md-2 " })
                    <div class="col-md-2">
                       @Html.PasswordFor(m => m.senha,new {@class = "control-label col-md-4  ", id = "senha" } )
                        @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" name="btnUsuario" value="Criar" class="btn btn-default"/>
                    </div>
                </div>
            </div>
        }
        </div>
        <div id="modalContaCriada" class="modal fade">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title text-success">
                            Seja bem vindo @ViewBag.login !
                        </h4>
                    </div>
                    <div class="modal-body">
                        <h5 class="modal-title text-success">
                            Conta Criada com sucesso!
                        </h5>
                    </div>
                    <div class="modal-footer">
                        <form>
                            <button type="submit" formaction="/Usuario/Login" class="btn btn-success">Fechar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</body>
</html>

@if (ViewBag.login != null)
{
    @section scripts{
        <script>
                modalSucessoAccount();
        </script>
    }
}
