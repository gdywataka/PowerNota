
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/imgs/jstree_default/style.css" />
<div id="desk_usuario" />

@section scripts {
    <script type="text/javascript" src="~/Scripts/jstree.js"></script>
    <script>
        $('#desk_usuario').jstree({
            core: {
                check_callback : true,
                data:
                [
                    @Html.Raw(ViewBag.json_pastas)
                   // { 'id' : 'ajson1', 'parent' : '#', 'text' : 'Simple root node' },
                   //{ 'id' : 'ajson2', 'parent' : '#', 'text' : 'Root node 2' },
                   //{ 'id': 'ajson3', 'parent': 'ajson2', 'text': 'Child 1', 'icon': ' glyphicon glyphicon-folder-open'},
                   //{ 'id': 'ajson4', 'parent': 'ajson2', 'text': 'Child 2', "icon": "glyphicon glyphicon-file", }
                ]
            }
        });

        $("#desk_usuario").bind(
            "select_node.jstree", function (evt, data) {
                $("#desk_usuario").jstree('toggle_node',data.node);
            }
        );
    </script>
}





